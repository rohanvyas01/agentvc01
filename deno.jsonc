{
  "compilerOptions": {
    "lib": ["deno.ns", "dom", "dom.iterable", "dom.asynciterable"]
  },
  "lint": {
    "rules": {
      "tags": ["recommended"],
      "exclude": ["no-explicit-any"]
    }
  },
  "fmt": {
    "options": {
      "useTabs": false,
      "lineWidth": 80,
      "indentWidth": 2,
      "singleQuote": true
    }
  },
  "tasks": {
    "start": "deno run --allow-net --allow-read --allow-env supabase/functions/pitch-deck-processor/index.ts"
  },
  "imports": {
    "pdf-parse": "npm:pdf-parse@1.1.1"
  },
  // This tells Deno to create a node_modules directory
  "nodeModulesDir": true
}
